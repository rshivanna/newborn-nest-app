{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "backend-data",
      "host": {
        "sourcePath": "/var/app/data"
      }
    },
    {
      "name": "backend-logs",
      "host": {
        "sourcePath": "/var/app/logs"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/newborn-nest-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5000"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "backend-data",
          "containerPath": "/app/data"
        },
        {
          "sourceVolume": "backend-logs",
          "containerPath": "/app/logs"
        }
      ],
      "links": []
    },
    {
      "name": "frontend",
      "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/newborn-nest-frontend:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "backend"
      ]
    }
  ]
}
